@{
    ViewData["Title"] = "Home Page";
}
<!--This is the view for the homepage.  We loop through each iteration of the data entered in the database.-->
@model IQueryable<Bookstore>
<!DOCTYPE html>
<html>
<head>
    
        <title>These are some books</title>
        <meta name="viewport" content="width=device-width"/>
</head>
<body>
    
    <br />
    <br />
    @foreach (var x in Model)
    {
        <div class="card card-outline-primary m-1 p-1">
            <div class=“bg-faded p-1">
                <h3>@x.Title</h3>
                <bold><h5>@x.AuthorFirst  @x.AuthorLast  @x.AuthorMiddle </h5></bold>
                <h5>@x.Publisher</h5>

                <p>@x.ISBN</p>
                <p>@x.Category</p>
                <p>@x.Classification</p>
                <span class=“badge badge-pill badge-primary” style=“float:right”>
                    <small>@x.Price.ToString("c")</small>
                </span>
            </div>
        </div>
    }
</body>
</html>